    "codemirror": "~5.34.0",
    "language-command": "~1.0.0",
    "language-detect-spawn": "~1.0.0",
    "language-exec": "~1.0.0",
    "node-pty": "~0.7.4",
    "node-sass": "^4.8.1",
    "react": "~16.2.0",
    "react-codemirror2": "^4.2.1",
    "react-dom": "~16.2.0"
  },
  "devDependencies": {
    "@types/node": "~9.4.0",
    "@types/react": "~16.0.35",
    "cross-env": "^5.1.4",
    "electron": "~1.7.8",
    "rimraf": "~2.6.2",
    "source-map-loader": "^0.2.3",
